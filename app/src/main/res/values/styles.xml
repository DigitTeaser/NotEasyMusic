<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for MainActivity RelativeLayout -->
    <style name="MainActivityRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/viewgroups_padding</item>
    </style>

    <!-- Style for MainActivity ImageView -->
    <style name="MainActivityImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">.50</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <!-- Style for MainActivity Text -->
    <style name="MainActivityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/music_selection</item>
    </style>

    <!-- Style for song time text -->
    <style name="SongTimeText">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/music_time_size</item>
        <item name="android:text">@string/song_time</item>
    </style>

    <!-- Style for music control Image -->
    <style name="MusicControlImage">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
